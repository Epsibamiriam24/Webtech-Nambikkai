# MongoDB Atlas Configuration
# Get this from MongoDB Atlas > Databases > Connect > Connect your application
MONGODB_URI=mongodb+srv://username:password@cluster.xxxxx.mongodb.net/dbname?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=production

# JWT Authentication Secret (change this in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Frontend URL for CORS
FRONTEND_URL=https://your-frontend-url.com
